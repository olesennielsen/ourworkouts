<h2>New workout tip</h2>
<br />
<div class="row-fluid">
	<div class="span6">
		<p>Creates workout tip one day later than the latest workout tip, so do them in time</p>
		<%= form_for(@workout_tip) do |f| %>
			<% if @workout_tip.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@workout_tip.errors.count, "error") %> prohibited this workout_tip from being saved:</h2>

		      <ul>
		      <% @workout_tip.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>

			<%= f.label :title %>
		  <%= f.text_field :title %>

			<%= f.label :author %>
		  <%= f.text_field :author %>

			<%= f.label :body %>
			<%= f.text_area :body, :rows => 5 %>

			<p>
			<%= f.submit "Create tip", :class => "btn btn-primary" %>
		  </p>

		<% end %>
	</div>	
	<div class="span6">
		
	</div>
</div>

