<div class="modal hide" id="myModal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">&times;</button>
		<h3>Create a new Event</h3>
	</div>	
	<div class="modal-body">
		<br />
		<%= form_for @event do |f| %>
		<% if @event.errors.any? %>
		<div class="row-fluid">
			<div id="error_explanation" class="span6">
				<h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>
				<% @event.errors.full_messages.each do |msg| %>
				<%= msg %>
				<% end %>      
			</div>
		</div>
		<% end %>
		<br />
		<div class="field">
			<%= f.label :title %>
			<%= f.text_field :title %>
		</div>
		<div class="field">
			<%= f.label :group %>
			<%= f.collection_select :group_id, @groups, :id, :name %>
		</div>
		<br />
		<div class="field">
			All Day: <%= f.check_box :all_day %>
		</div>
	</br>
	<div class="field">
		<%= f.label :start_time %>
		<%= f.text_field :start_hour_minute, :id => "start_time", :class => "start_time" , :style => "width: 75px;" %>
		<i class="icon-time" style="margin: -2px 0 0 -22.5px; pointer-events: none; position: relative;"></i>&nbsp;
		<%= f.text_field :start_date, :id => "start_date", :style => "width: 100px;" %>
		<i class="icon-calendar" style="margin: -2px 0 0 -22.5px; pointer-events: none; position: relative;"></i>
	</div>
	<div class="field">
		<%= f.label :end_time %>
		<%= f.text_field :end_hour_minute, :class => "end_time", :style => "width: 75px;" %>
		<i class="icon-time" style="margin: -2px 0 0 -22.5px; pointer-events: none; position: relative;"></i>&nbsp;
		<%= f.text_field :end_date, :id => "end_date", :style => "width: 100px;" %>
		<i class="icon-calendar" style="margin: -2px 0 0 -22.5px; pointer-events: none; position: relative;"></i>

	</div>
	<div class="field">
		<%= f.label :description %>
		<%= f.text_area :description, :size => "20x5" %>
	</div>
</div>
<div class="modal-footer">
	<%= f.submit :class => "btn btn-primary"  %>
	<a href="#" class="btn" data-dismiss="modal">Close</a>
</div>
<% end %>
</div>
