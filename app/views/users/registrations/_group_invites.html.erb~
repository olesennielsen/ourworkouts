
  <div class="span6">
    <h2>Group invitations</h2>
    <br />
    <% if @invitations.empty? %>
    <p> <%= @invitations_string %></p>
    <% else %>
    <table class="table">
      <thead>
	<tr>
	  <th>Group Name</th>
	  <th>Inviter</th>
	</tr>
      </thead>
      <tbody>
	<% @invitations.each do |invitation| %>
	<tr>
	  <td><%= invitation.group %></td>
	  <td><%= invitation.inviter.name %></td>
	<% if current_user.groups.include?(invitation.group) %>
	<td><%= button_to "Join", {:action => "add_user", :invitation => invitation.id }, :remote => true, :id => "join", :class => "btn btn-success" %></td> 
<% else %>
<%= link_to remove_group_entry_path(:id => invitation.group), :remote => true, :method => :post, :id => "remove" do %>
<i class="icon-remove"></i>
<% end %>			
</tr>
<% end %>
</tbody>
</table>
<% end %>
</div>
<% end %>
