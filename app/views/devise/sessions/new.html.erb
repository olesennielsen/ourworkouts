<h2>Sign in</h2>
<br />
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>
  <%= f.button :submit, "Sign in", :class => "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
<br /><br />
<p>Or sign in through:</p>
<br />
<p><%= link_to image_tag("facebook.png", :size => "70x70", :alt => "Sign in with Facebook", :title => "Sign in with Facebook"), user_omniauth_authorize_path(:facebook) %>
<%= link_to image_tag("twitter.png", :size => "70x70", :alt => "Sign in with Twitter", :title => "Sign in with Twitter"), user_omniauth_authorize_path(:twitter) %>
<%= link_to image_tag("google.png", :size => "70x70", :alt => "Sign in with Google", :title => "Sign in with Google"), user_omniauth_authorize_path(:google_oauth2) %>
<%= link_to image_tag("linkedin.png", :size => "70x70", :alt => "Sign in with LinkedIn", :title => "Sign in with LinkedIn"), user_omniauth_authorize_path(:linkedin) %></p>